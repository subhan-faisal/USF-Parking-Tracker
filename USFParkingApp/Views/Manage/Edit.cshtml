@model USFParkingTracker.Models.ParkingLot
@{
    ViewData["Title"] = "Edit Parking Lot";
}

<div class="container">
    <h2 class="my-4">@ViewData["Title"]</h2>
    
    <div class="card shadow">
        <div class="card-body">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="CreatedAt" />
                <input type="hidden" asp-for="Status" />
                
                <div class="form-group">
                    <label asp-for="Name" class="control-label">Lot Name</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                
                <div class="form-group">
                    <label asp-for="Type" class="control-label">Lot Type</label>
                    <select asp-for="Type" class="form-control">
                        <option value="">-- Select Type --</option>
                        <option value="Student">Student</option>
                        <option value="Staff">Staff</option>
                        <option value="Faculty & Staff">Faculty & Staff</option>
                        <option value="Visitor">Visitor</option>
                        <option value="Staff & Student">Staff & Student</option>
                        <option value="Staff & Visitor">Staff & Visitor</option>
                        <option value="Student & Event">Student & Event</option>
                    </select>
                    <span asp-validation-for="Type" class="text-danger"></span>
                </div>
                
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="TotalSpaces" class="control-label">Total Spaces</label>
                            <input asp-for="TotalSpaces" class="form-control" type="number" min="1" />
                            <span asp-validation-for="TotalSpaces" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="AvailableSpaces" class="control-label">Available Spaces</label>
                            <input asp-for="AvailableSpaces" class="form-control" type="number" min="0" />
                            <span asp-validation-for="AvailableSpaces" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                
                <div class="form-group">
                    <label class="control-label">Coordinates</label>
                    <div class="row">
                        <div class="col-md-6">
                            <input name="Coordinates.Lat" class="form-control" placeholder="Latitude" 
                                   value="@(Model.Coordinates?.Lat.ToString() ?? "28.0587")" />
                        </div>
                        <div class="col-md-6">
                            <input name="Coordinates.Lng" class="form-control" placeholder="Longitude" 
                                   value="@(Model.Coordinates?.Lng.ToString() ?? "-82.4139")" />
                        </div>
                    </div>
                </div>
                
                <div class="form-group mt-4">
                    <a asp-action="Index" class="btn btn-secondary mr-2">Cancel</a>
                    <button type="submit" class="btn btn-primary">Update Parking Lot</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}