<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - USF Parking Tracker</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.0/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.3/dist/leaflet.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom shadow-sm">
            <div class="container">
                <a class="navbar-brand d-flex align-items-center" asp-controller="Home" asp-action="Index"> 
                    <span class="h5 mb-0 text-success">USF Parking App</span>
                </a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["Action"].ToString() == "Index" && ViewContext.RouteData.Values["Controller"].ToString() == "Home" ? "active font-weight-bold" : "")" 
                               asp-controller="Home" 
                               asp-action="Index">
                                Dashboard
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["Action"].ToString() == "Map" ? "active font-weight-bold" : "")" 
                               asp-controller="Home" 
                               asp-action="Map">
                                Map
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["Controller"].ToString() == "Manage" ? "active font-weight-bold" : "")" 
                               asp-controller="Manage" 
                               asp-action="Index">
                                Manage
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["Action"].ToString() == "About" ? "active font-weight-bold" : "")" 
                               asp-controller="Home" 
                               asp-action="About">
                                About Us
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    
    <main role="main">
        @RenderBody()
    </main>
    
    <footer class="border-top mt-4 py-4 bg-light">
        <div class="container">
            <div class="row">
                <div class="col-md-4">
                    <h5 class="text-success">USF Parking Tracker</h5>
                    <p class="text-muted small">
                        A comprehensive solution for tracking parking availability across the University of South Florida campus.
                    </p>
                </div>
                
                <div class="col-md-4">
                    <h5 class="text-success">Quick Links</h5>
                    <ul class="list-unstyled small">
                        <li><a asp-controller="Home" asp-action="Index" class="text-muted">Dashboard</a></li>
                        <li><a asp-controller="Home" asp-action="Map" class="text-muted">Map</a></li>
                        <li><a asp-controller="Manage" asp-action="Index" class="text-muted">Manage Parking</a></li>
                        <li><a asp-controller="Home" asp-action="About" class="text-muted">About Us</a></li>
                    </ul>
                </div>
                
                <div class="col-md-4">
                    <h5 class="text-success">Contact</h5>
                    <ul class="list-unstyled small text-muted">
                        <li class="d-flex align-items-center mb-2">
                            <i class="bi bi-envelope mr-2"></i>
                            parkingtracker@usf.edu
                        </li>
                        <li class="d-flex align-items-center mb-2">
                            <i class="bi bi-telephone mr-2"></i>
                            (813) 555-1234
                        </li>
                    </ul>
                </div>
            </div>
            
            <div class="border-top mt-3 pt-3 d-flex justify-content-between">
                <p class="text-muted small">&copy; @DateTime.Now.Year USF Parking Tracker. All rights reserved.</p>
                <a href="https://github.com/subhan-faisal/Final_Project_Application_Development" 
                   target="_blank" 
                   class="text-muted">
                    <i class="bi bi-github"></i>
                </a>
            </div>
        </div>
    </footer>
    
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://unpkg.com/leaflet@1.9.3/dist/leaflet.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>